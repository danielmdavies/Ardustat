  <script>
    files = '';
    $( "#folders" ).children().on( "click", function( event ) 
    {
      folder_name = this.id;
      console.log(folder_name);
      //make an AJAX request to get file_list 
      //display file_list
      $.ajax({
        type:'POST',
        url:'/show_files',
        async: true,
        data: {'folder':folder_name},
        success: function(results)
        {
          console.log('successful sending of things :)')
          files = results;
          console.log(files);
          showFiles(files);
        }   
      });  
    });
    
    function showFiles(files)
    {
      var lts = '';
      for (var i in files)
      {
      foo = files[i].toString()
      console.log('file is '+files[i]);
      lts += "<span class='leftin'><a href='/"+foo+"'>" +foo+ "</a></span><span class='rightin'></span><br>";
      }
    $( "#files" ).html(lts)
    }

  </script>
